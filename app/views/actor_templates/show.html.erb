<h1>
  <%= @the_actor.first_name %> <%= @the_actor.last_name %>
</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_actor.image %>" width="250">
  </dd>

  <dt>Date of birth</dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>Bio</dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>Internal ID</dt>
  <dd>
    <%= @the_actor.id %>
  </dd>
</dl>
